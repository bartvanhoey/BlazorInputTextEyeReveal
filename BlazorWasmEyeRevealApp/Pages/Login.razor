@page "/login"
@inject NavigationManager NavigationManager
@layout AuthLayout;
@inherits LoginBase

<div class="card mt-3 shadow-sm rounded auth-card">
    <div class="px-4 pt-4">
        <h2 class="card-title">Log in</h2>
        <hr/>
    </div>
    <div class="card-body p-4 h-100">

        <EditForm class="d-flex flex-column h-100" Model="Input" method="post" OnValidSubmit="LoginUserAsync"
                  FormName="login">
            <DataAnnotationsValidator/>
            <div class="form-floating mb-3">
                <InputText id="email" @bind-Value="Input.Email" class="form-control" autocomplete="username"
                           aria-required="true"/>
                <label for="email" class="form-label">Email</label>
                <ValidationMessage For="() => Input.Email" class="text-danger"/>
            </div>
            <div class="form-floating mb-3  input-with-eye-icon">
                <InputText id="password" type="@PasswordType"
                           @bind-Value="Input.Password" class="form-control" autocomplete="current-password"
                           aria-required="true"/>
                <button type="button"  class="btn btn-default btn-eye-icon"  @onclick="TogglePasswordReveal"><i class="@CssClassPasswordEyeIcon"></i></button>
                <label for="password" class="form-label">Password</label>
                <ValidationMessage For="() => Input.Password" class="text-danger"/>
            </div>
            <div class="form-floating mb-3 ">
                <a class="card-link float-end" href="/forgotpassword">
                    Forgot password?
                </a>
            </div>
            <div class="mt-auto">
                <button type="submit" class="w-100 mt-3 btn btn-lg btn-primary">Log in</button>
                <p class="mt-3">
                    Don't have an account?
                    <a class="card-link"
                       href="@(NavigationManager.GetUriWithQueryParameters("register", new Dictionary<string, object?> { ["ReturnUrl"] = ReturnUrl }))">
                        Sign up</a>
                </p>
            </div>
        </EditForm>
    </div>
</div>




